{% extends 'back.html.twig' %}

    {% block body %}




<div class="app-content">
    <div class="side-app">
        <div class="page-header">
            <h4 class="page-title">Liste des categories</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="fe   fe-box mr-1"></i> Tables</a></li>
                <li class="breadcrumb-item active" aria-current="page">Data Tables</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-md-18 col-lg-18">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Liste des categories</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="table table-striped table-bordered" >
                                <thead>
                                <tr>
                                    <th class="wd-15p">id</th>
                                    <th class="wd-15p">nom</th>
                                    <th class="wd-20p">Description</th>
                                    <th class="wd-15p">statut</th>
                                    <th class="wd-10p" >Modifier</th>
                                    <th class="wd-25p">Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr {% for a in c %}>
                                    <td>{{a.id}}</td>
                                    <td>{{a.nom}}</td>
                                    <td>{{a.description}}</td>
                                    <td>{{a.statut}}</td>

                                    <td><a href="{{ path('m', {'id':a.id}) }}" class="btn btn-success">Modifier</a></td>
                                    <td><a href="{{ path('DC', {'id':a.id}) }}" class="btn btn-success">Supprimer</a></td>
                                </tr {% endfor %}>
                                </tbody>
                            </table>
                            <br>
                            <a href="{{ path('Ajc') }}" class="btn btn-success">Ajouter nouvelle catégorie </a>


                            <!-- table-wrapper -->




                            <!-- section-wrapper -->
                        </div>
                    </div>
                </div>
            </div>
            <script>

                function validateSubmit() {
                    result = confirm("Êtes-vous sur de vouloir supprimer l'article ?");
                    if (result) {
                        $('#form').submit();


                    }
                }
            </script>

            {% endblock %}
















