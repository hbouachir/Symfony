{% extends '/AdminTemplate/dashboard.html.twig' %}

{% block titre %}Ajouter Factures Admin{% endblock %}

{% block body %}
   

<form >
    <div class="col-lg-12">
        <div class="appointment-action ptb-100">
		  		{{ form_start(form, {'attr':{'novalidate' : 'novalidate' }}) }}
                           
 <div id="container">
   
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            de :<br>{{ form_widget(form.de, {  'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>

                    <div class="col-lg-12">

                      NumeroFacture :{{ form_widget(form.NumeroFacture, {  'attr': {'class': 'form-group'} }) }}

                    </div>

                    <div class="col-lg-12">
                     date : {{ form_widget(form.date, {  'attr': {'class': 'form-group'} }) }}

                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            designation :{{ form_widget(form.designation, {  'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>
					<div class="col-lg-12">
                        <div class="form-group">
                             <div class="entry">
             montant :{{ form_widget(form.montant, {  'attr': {'class': 'form-group'} }) }}
                        </div>
                    </div>

                    <div class="col-12">
                        <input type="submit" value="Enregistrer" class="btn btn-success"/>
                    </div>
                </div>
                {{ form_end(form) }}

        </div>
    </div>
	</div>
	</form>
	<style>
	

#container{
    width:350px;
    margin:0 auto;
    margin-top:5%;
}
/* Bordered form */
form {
    width:100%;
    padding: 30px;
  
    background: #8A2BE2;
    box-shadow: 0 0 0px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}


/* Full-width inputs */
input[type=text] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
}

/* Set a style for all buttons */
input[type=submit] {
    background-color:#800080;
    color: white;
    padding: 14px 20px;
    margin: 40px 0;
    border: none;
    cursor: pointer;
    width: 100%;
}
input[type=submit]:hover {
    background-color: white;
    color: #800080;
    border: 1px solid #800080;
}
	<script>	//Validtion Code For Inputs

    var de = document.forms['form']['de'];
   
    
    var de_error = document.getElementById('de_error');
   
    
    de.addEventListener('textInput', de_Verify);
    
    
    function validated(){
        if (de.value.length < 9) {
            de.style.border = "1px solid red";
            de_error.style.display = "block";
            de.focus();
            return false;
        }
      
    
    }
    function de_Verify(){
        if (de.value.length >= 8) {
            de.style.border = "1px solid silver";
            de_error.style.display = "none";
            return true;
        }
    }
    
    
    
    </script>

{% endblock %}
