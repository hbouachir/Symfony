{% extends 'back.html.twig' %}

    {% block body %}




<div class="app-content">
    <div class="side-app">
        <div class="page-header">
            <h4 class="page-title">Liste des produits</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="fe   fe-box mr-1"></i> Tables</a></li>
                <li class="breadcrumb-item active" aria-current="page">Data Tables</li>
            </ol>
        </div>
        {% for message in app.flashes('info') %}
            <div class="aler alert-info">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-18 col-lg-18">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Liste des produits</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="table table-striped table-bordered" >
                                <thead>
                                <tr>
                                    <th class="wd-15p">codeProduit</th>
                                    <th class="wd-15p">nom</th>
                                    <th class="wd-20p">Description</th>
                                    <th class="wd-15p">Quantité </th>
                                    <th class="wd-15p">Prix</th>
                                    <th class="wd-15p">statut</th>
                                    <th class="wd-15p">Catégorie</th>
                                    <th class="wd-15p">ref</th>
                                    <th class="wd-10p" >Modifier</th>
                                    <th class="wd-25p">Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr {% for a in p %}>
                                    <td>{{a.codeProduit}}</td>
                                    <td>{{a.nom}}</td>
                                    <td>{{a.description}}</td>
                                    <td>{{a.quantite}}</td>
                                    <td>{{a.prix}}</td>
                                    <td>{{a.statut}}</td>
                                    <td>{{a.categorie}}</td>
                                    <td>{{a.codeProduit}} {{a.categorie}}</td>
                                    <td><a href="{{ path('U', {'id':a.codeProduit}) }}" class="btn btn-success">Modifier</a></td>
                                    <td><a href="{{ path('D', {'id':a.codeProduit}) }}" class="btn btn-success">Supprimer</a></td>
                                </tr {% endfor %}>
                                </tbody>
                            </table>
                            <br>
                            <a href="{{ path('Aj') }}" class="btn btn-success">Ajouter nouveau produit </a>
                            <br>
                            <br>
                            <a href="{{ path('C') }}" class="btn btn-success">Liste des Catégories</a>


                            <div class="app-content">
                                <div class="side-app">
                                    <div class="page-header">
                                        <h4 class="page-title"></h4>

                                    </div>
                                    <div id="div_chart"></div>

                                    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                                    <script type="text/javascript">
                                        gc_draw(piechart, 'div_chart')
                                    </script>
                                </div>
                            </div>


                        </div>

                        <!-- table-wrapper -->




                        <!-- section-wrapper -->
                    </div>
                </div>
            </div>
        </div>
        <script>

            function validateSubmit() {
                result = confirm("Êtes-vous sur de vouloir supprimer l'article ?");
                if (result) {
                    $('#form').submit();


                }
            }
        </script>

        {% endblock %}
















