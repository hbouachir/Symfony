{% extends 'Front1.html.twig' %}



{% block title %}Hello ProduitController!{% endblock %}
{% block body %}





    <body>
    <div class="app-content">
        <div class="side-app">
            <div class="page-header">
                <h4 class="page-title">Liste des produits</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#"><i class="fe   fe-box mr-1"></i> Tables</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Data Tables</li>
                </ol>
            </div>

            <div class="row">
                <div class="col-md-18 col-lg-18">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Liste des produits</div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">


                                <form method="post">

                                    <input type="text" name="categorie">
                                    <input type="submit" value="recherche Par Catégorie">

                                    <table id="example" class="table table-striped table-bordered" >
                                        <thead>
                                        <tr>

                                            <th class="wd-15p">nom</th>
                                            <th class="wd-20p">Description</th>
                                            <th class="wd-15p">Quantité </th>
                                            <th class="wd-15p">Prix</th>
                                            <th class="wd-15p">statut</th>
                                            <th class="wd-15p">Catégorie</th>
                                            <th class="wd-10p" >Note</th>
                                            <th class="wd-10p" >panier</th>

                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr {% for a in p %}>

                                            <td>{{a.nom}}</td>
                                            <td>{{a.description}}</td>
                                            <td>{{a.quantite}}</td>
                                            <td>{{a.prix}}</td>
                                            <td>{{a.statut}}</td>
                                            <td>{{a.categorie}}</td>

                                            <td>
                                                <link
                                                        rel="stylesheet"
                                                        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
                                                />
                                                <link rel="stylesheet" href="./index.css" />
                                                <script src="./index.js" defer></script>
                                                <div>
                                                    <span class="fas fa-star" data-star="1"></span>
                                                    <span class="fa fa-star" data-star="2"></span>
                                                    <span class="fas fa-star" data-star="3"></span>
                                                    <span class="fas fa-star" data-star="4"></span>
                                                    <span class="fas fa-star" data-star="5"></span>

                                                </div>
                                            </td>
                                            <td><a href="{{ path('cart_add',{'id':a.codeProduit}) }}"  class="btn btn-success">Ajout au Panier</a></td>

                                        </tr {% endfor %}>

                                        </tbody>

                                    </table>



                                </form>
                            </div>

                            <!-- table-wrapper -->




                            <!-- section-wrapper -->
                        </div>

                    </div>
                </div>
            </div>
    </body>
    </html>

{% endblock %}